{
  "name": "electron-quick-start",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:ia": "electron-builder --ia32"
  },
  "build": {
    "appId": "com.xxx.app",
    "copyright": "LEON",
    "productName": "myApp",
    "extraResources": [
      {
        "from": "./AutoHotkey.exe",
        "to": "./AutoHotkey.exe"
      },
      {
        "from": "./resources/jy.bat",
        "to": "./jy.bat"
      },
      {
        "from": "./resources/start.bat",
        "to": "./start.bat"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://localhost:8888/"
      }
    ]
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^17.2.0",
    "electron-builder": "^22.11.7"
  },
  "dependencies": {
    "electron-updater": "^4.3.9",
    "sudo-prompt": "^9.2.1"
  }
}
